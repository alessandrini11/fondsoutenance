<div class="h-32 border rounded shadow p-3 transform hover:-translate-y-1 transition-all duration-300">
    <div class="flex justify-between h-full">
        <div class="flex justify-between flex-col">
            <span class="text-sm text-gray-600 uppercase">{{name}}</span>
            <span class="text-2xl text-gray-700 font-thin mb-3">{{amount}}</span>
        </div>
        <div class="flex justify-between items-end flex-col">
            <div class="flex">
                {% if percentage is defined %}
                    {% if percentage == "increase" %}
                        <p class="text-green-500 mr-1"><i class="fa fa-arrow-up transform rotate-45"></i> <span class="">+{{percentage_change}}%</span> </p>
                        {% elseif percentage == "neutral" %}
                        <p class="text-blue-500 mr-1"><i class="fa fa-arrow-down transform rotate-90"></i> <span class="">0%</span> </p>
                        {% elseif percentage == "decrease" %}
                        <p class="text-red-500 mr-1"><i class="fa fa-arrow-down transform rotate-45"></i> <span class="">{{percentage_change}}%</span> </p>
                    {% endif %}
                    <span class"text-xs"> Ã  hier</span>
                {% endif %}
            </div>
            <span class="h-12 w-12 flex justify-center items-center rounded bg-violet-200 text-violet-700">
                <i class="fa {{icon}}"></i>
            </span>
        </div>
    </div>
</div>