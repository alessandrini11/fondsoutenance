<div class="h-32 border rounded shadow p-3 transform hover:-translate-y-1 transition-all duration-300">
    <div class="flex justify-between h-full">
        <div class="flex justify-between flex-col">
            <span class="text-sm text-gray-600 uppercase">{{name}}</span>
            <span class="text-2xl text-gray-700 font-thin mb-3">{{amount}}</span>
        </div>
        <div class="flex justify-between items-end flex-col">
            <div class="">
                <p class="text-green-500"><i class="fa fa-arrow-up transform rotate-45"></i> <span class="">+16.5%</span> </p>
                <p class="text-red-500"><i class="fa fa-arrow-down transform rotate-45"></i> <span class="">-8.5%</span> </p>
            </div>
            <span class="h-12 w-12 flex justify-center items-center rounded bg-violet-200 text-violet-700">
                <i class="fa {{icon}}"></i>
            </span>
        </div>
    </div>
</div>