{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section class="">
        <div class="w-11/12 h-screen mx-auto">
            <div class="flex justify-center items-center py-5">
                <div class="space-y-2 w-full lg:w-2/3">
                    <h1 class="text-center text-3xl font-semibold">Connexion</h1>
                    <div class="my-5">
                        {% for message in app.flashes('success') %}
                            <div class="bg-green-200 text-green-600 ">
                                <p class="py-3 px-6">{{ message }}</p>
                            </div>
                        {% endfor %}
                        {% if error %}
                            <div class="bg-red-100 text-red-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        {% if app.user %}
                            <div class="mb-3 bg-red-100 text-red-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a class="font-bold" href="{{ path('app_logout') }}">Logout</a></div>
                        {% endif %}
                    </div>
                    <form method="post" class="space-y-3">
                        <div class="flex">
                            <span class="inline-flex items-center px-3.5 text-sm text-gray-900 bg-gray-200 border border-r-0 border-gray-300 rounded-l-md">
                                <i class="fa fa-envelope"></i>
                            </span>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="rounded-none rounded-r-lg bg-gray-50 border text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm border-gray-300 p-2.5" autocomplete="email" placeholder="email" required autofocus>
                        </div>
                        <div class="flex">
                            <span class="inline-flex items-center px-3.5 text-sm text-gray-900 bg-gray-200 border border-r-0 border-gray-300 rounded-l-md ">
                                <i class="fa fa-lock"></i>
                            </span>
                            <input type="password" name="password" id="inputPassword" class="rounded-none rounded-r-lg bg-gray-50 border text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm border-gray-300 p-2.5" autocomplete="current-password" placeholder="password" required>
                        </div>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                        <button type="submit" class="focus:outline-none text-white bg-[#5A72EA] hover:bg-[#2d4ce7] focus:ring-4 focus:ring-[#7f8ed8] font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 w-full">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
